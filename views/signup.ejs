<!doctype html>
<html>
<head>
    <title>JournalFy Sign Up</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins|Righteous|Sen&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
  <body>
    <header class="logInHeader">
      <h1>JournalFy</h1>
      <section>
        <a href="/login" class="btn btn-default">Login</a>
        <a href="/signup" class="btn btn-default">Signup</a>
      </section>
    </header>
    <div class="container signUpPage">
      <div class="col-sm-6 col-sm-offset-3">

        <h1>Sign up</h1>

        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
          <% } %>

          <!-- LOGIN FORM -->
          <form action="/signup" method="post">
            <div class="form-group">
              <label>Create Username</label>
              <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Signup</button>
          </form>

          <hr>

          <p>Already have an account? <a href="/login">Login</a></p>
          <p>Or go <a href="/">home</a>.</p>

      </div>
    </div>
  </body>
</html>
