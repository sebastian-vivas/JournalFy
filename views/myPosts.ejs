<!doctype html>
<html>
<head>
    <title>JournalFy</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins|Righteous|Sen&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
      <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
</head>
  <body>
    <header class="logInHeader">
      <h1>Journalfy</h1>
      <section>
        <a href="/writePost" class="btn btn-default"><span class="fa fa-user"></span> Write New Post</a>
            <a href="/profile" class="btn btn-default"><span class="fa fa-user"></span>Feed</a>
        <a href="/logout" class="btn btn-default">Logout</a>
      </section>
    </header>
    <section class="feed">
          <h2>My Entries</h2>
          <% for(var i=0; i< entries.length; i++) {%>
            <% if (user.local.email == entries[i].name) { %>
             <section class="post">
              <h5><%= entries[i].name %></h5>
              <h3><%= entries[i].title %></h3>
              <h5><%= entries[i].date %></h5>
              <p><%= entries[i].msg %></p>
              <span class="like" style="color:<%= entries[i].favorite %>"><%= entries[i].like %></span>
              <span><i id="trash" class="fa fa-trash" aria-hidden="true"></i></span>
            </section>
            <% } %>
            <% } %>
      </section>


      <script src="main.js"></script>
    </body>
</html>
